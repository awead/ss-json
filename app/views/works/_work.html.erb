<div class="card">
  <h5 class="card-header"><%= "Latest version: #{work.versions.count}" %></h5>
  <div class="card-body">
    <h5 class="card-title">
      <%= work.latest_version.title || "No Title" %>
      <span class="badge badge-primary"><%= work.latest_version.aasm_state %></span>
    </h5>
    <p class="card-text"><%= work.latest_version.description %></p>
    <%= link_to "Details", work %>
  </div>
</div>
