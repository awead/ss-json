<%= form_with(model: work, local: true) do |form| %>
  <% if work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(work.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
      <% work.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.fields_for(:versions, work.versions.first) do |work_versions_form| %>
    <div class="form-group">
      <%= work_versions_form.label :title %>
      <div class="input-group">
        <%= work_versions_form.text_field :title, class: 'form-control' %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :work_type %>
    <div class="input-group">
      <%= form.select :work_type, Work::Types.options_for_select_box, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
